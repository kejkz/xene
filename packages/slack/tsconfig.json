{
  "compilerOptions": {
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "inlineSourceMap": true,
    "stripInternal": true,
    "module": "commonjs",
    "declaration": true,
    "baseUrl": "src",
    "target": "es2017",
    "rootDir": "src",
    "outDir": "dist",
    "lib": [
      "es2016"
    ]
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}
